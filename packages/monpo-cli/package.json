{
  "name": "@monpo/cli",
  "version": "0.0.3",
  "description": "Command-line tool for Monpo framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "monpo": "./bin/monpo"
  },
  "scripts": {
    "clean": "rm -Rf ./dist; rm -Rf ./build",
    "transpile": "npm run clean; tsc",
    "prepare": "npm run transpile",
    "test": "npm run transpile && nyc hayspec test --match ./dist/tests/**/*.test.js"
  },
  "nyc": {
    "exclude": [
      "src/tests"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@hayspec/cli": "^0.4.19",
    "@hayspec/spec": "^0.4.19",
    "@types/fs-extra": "^5.0.4",
    "@types/node": "^10.3.2",
    "@types/yargs": "^11.0.0",
    "ava": "^0.25.0",
    "fs-extra": "^7.0.0",
    "nyc": "^12.0.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "@monpo/core": "^0.0.1",
    "@monpo/init": "^0.0.3",
    "yargs": "^12.0.1"
  }
}
